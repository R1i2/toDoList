<%-include("header")-%>
<div class="box" id="heading">
  <h1><%=listItem%></h1>
</div>
<div class="box">
  <% for (let i=0;i < Todo.length ;i++){%>
  <div class="item">
    <input type="checkbox" />
    <p><%=Todo[i]%></p>
  </div>
  <%}%>

  <form class="item" method="post" action="/">
    <input
      type="text"
      name="newItem"
      placeholder="New Todo"
      autocomplete="off"
    />
    <button type="submit" name="button" value="<%=listItem%>">+</button>
  </form>
</div>
<%-include("footer")-%>
